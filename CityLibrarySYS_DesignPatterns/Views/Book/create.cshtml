@model CityLibrarySYS_DesignPatterns.Models.Book

<div class="container">
    <h2>Add Book</h2>
    <form asp-action="Create" method="post">
        <div>
            <label asp-for="ISBN" class="form-label"></label>
            <input asp-for="ISBN" class="form-control" />
        </div>
        <div>
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div>
            <label asp-for="Author" class="form-label"></label>
            <input asp-for="Author" class="form-control" />
        </div>
        <div>
            <label asp-for="Genre" class="form-label"></label>
            <input asp-for="Genre" class="form-control" />
        </div>
        <div>
            <label asp-for="Pubblication" class="form-label"></label>
            <input asp-for="Pubblication" class="form-control" />
        </div>
        <div>
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div>
            <label asp-for="Status" class="form-label"></label>
            <input asp-for="Status" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Add Book</button>
    </form>
</div>